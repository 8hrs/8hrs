  <!--Top Black bar with logo-->
  <div class="jumbotron text-center black-header">
    <img class="small-logo" src="images/8hrs-layout-little-08.png">
  </div>
  <!--Navagation Bar End-->

  <!--Hero image-->
  <div>
    <img id="found-heroimage" src="images/found-header.png">
    <h1 id="header-text" class="text-center">WE FOUND
      <BR>YOUR
      <BR>EMPLOYER</h1>
    <span id="arrow-down" class="glyphicon glyphicon-menu-down" aria-hidden="true" onclick="scroll_to_div('eighthr-content')"></span>
  </div>
  <!--Hero image-->


  <div class="container">
    <div class="row">
      <div class="col-lg-5 text-right">
        <h1 id="title-text">WE HAVE A MATCH!</h1>
        <p> You're not alone! Someone else
          <br>has taken the first step to get organized.
          <br>Here are some details.</p>
      </div>

      <div id="eighthr-content" class="col-lg-7">
        <!--Title for the Employer Goes here-->
        {{#each campaigns}}
        <h1 id="campain-name" style="text-transform: uppercase;">{{campaignName}}</h1>
        <p>Employer:</p>
        <h1 id="employer">{{employer}}</h1>
        <p id="time-stamp" class="employer-body">
          <em>{{createdAt}}</em>
        </p>
        <!--City, State-->
        <p id="location" class="employer-body">
          <em>{{city}} {{state}}</em>
        </p>
        <!--Industry-->
        <p id="industry" class="employer-body">{{industry}}</p>

        <!--List of concerns-->
        Worker Concerns:
        {{#if wages}}
          <li id="concern-list" class="employer-body">Wages</li>
        {{/if}}
        {{#if benefits}}
          <li id="concern-list" class="employer-body">Benefits</li>
        {{/if}}
        {{#if genderEquality}}
          <li id="concern-list" class="employer-body">Gender Equality</li>
        {{/if}}
        {{#if racialEquality}}
          <li id="concern-list" class="employer-body">Racial Equality</li>
        {{/if}}
        {{#if ageEquality}}
          <li id="concern-list" class="employer-body">Age Equality</li>
        {{/if}}
        {{#if workingConditions}}
          <li id="concern-list" class="employer-body">Working Conditions</li>
        {{/if}}

        <!--Message to colleagues-->
        <p id="messagetocolleagues" class="employer-body">{{message}}</p>
      </div>
    </div>
  </div>


  <!--percentage section-->
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <img id="second-image" src="images/middle-back.png">
      </div>
    </div>
  </div>




  <!--This is where the Glassdoor API info can be dumped-->
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
      </div>
      <div id="api-content" class="col-lg-7">
        <!--Title for the Employer Goes here-->
        <h3 id="api-text-header" class="api-messagetocolleagues">
          <em>Ready to join the movement but need a little more info for support?
            <br>Check out what some other online communities are reporting.</em>
        </h3>
        <!--Message to colleagues-->
        <p class="api-messagetocolleagues">
        Review Title:
        {{featuredReview.headline}}</p>
        <p class="api-messagetocolleagues">
        Rating: {{featuredReview.overall}}
        </p>
        <p class="api-messagetocolleagues">
        Pros: {{featuredReview.pros}}
        </p>
        <p class="api-messagetocolleagues">
        Cons: {{featuredReview.cons}}
        </p>
        <a href='https://www.glassdoor.com/index.htm'>powered by
          <img src='https://www.glassdoor.com/static/img/api/glassdoor_logo_80.png' title='Job Search' />
        </a>
      </div>
      <div class="col-lg-2">
        <h1 id="api-text">MORE INSIGHTS
          <BR>FROM GLASSDOOR</h1>
      </div>
    </div>
  </div>
        {{/each}}

  <!--ABOUT THIS APP INFO-->



  <div id="last-section" class="container-fluid">
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-4" id="join-section-text">
        <h3 id="join-header">JOIN!</h3>
        <p id="join-body">
          <em>Now that you know a little more about this campaign towards getting organized, take the next step and participate.
            Join this campaign and become a part of a network of change!</em>
        </p>
         <!-- User -->
          <div class="form-group">
            <label for="join-user-id" id="join-user-id" class="control-label">User Name</label>
            <input type="text" class="form-control" id="submitUser" name="user" placeholder="This name will be kept private and not displayed">
          </div>

          <!-- Email -->
          <div class="form-group">
            <label for="join-email-id" id="join-email-id" class="control-label">Email</label>
            <input type="text" class="form-control" id="submitEmail" name="email" placeholder="This email will be kept private">
          </div>
        <button id="join-button" type="submit" class="btn btn-primary" onclick="join()">JOIN THIS CAMPAIGN!</button>
      </div>
      <div class="col-sm-6" id="target-bar-section">
        <div class="modal-div-canvas js-chart" style="width: 70%">
          <div id="myProgress">
            <div id="myBar"></div>
          </div>
          <br>
          <button id="target-status" class="btn btn-primary" onclick="move()">SEE MEMBERSHIP PROGRESS</button>
        </div>
      </div>
    </div>
  </div>

